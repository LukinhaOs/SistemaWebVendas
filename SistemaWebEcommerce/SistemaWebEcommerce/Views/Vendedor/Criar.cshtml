@model SistemaWebEcommerce.Models.VendedorFormViewModel
@{
    ViewData["Title"] = "Criar";
}

<h2 class="display-5">@ViewData["Title"]</h2>

<h3 class="display-Modify" style="color: cornflowerblue">Vendedor</h3>
<hr />
<div class="row">
    <div class="COL-MD-6">
        <form asp-action="Criar">

            <div class="form-group">
                <label asp-for="vendedor.Nome" class="control-label"></label>
                <input asp-for="vendedor.Nome" class="form-control" />
                <span asp-validation-for="vendedor.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.Email" class="control-label"></label>
                <input asp-for="vendedor.Email" class="form-control" />
                <span asp-validation-for="vendedor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.DataNasc" class="control-label"></label>
                <input asp-for="vendedor.DataNasc" class="form-control" />
                <span asp-validation-for="vendedor.DataNasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.SalarioBase" class="control-label"></label>
                <input asp-for="vendedor.SalarioBase" class="form-control" />
                <span asp-validation-for="vendedor.SalarioBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.DepartamentoId" class="control-label"></label>
                <select asp-for="vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos, "Id", "Nome"))" class="form-control"></select>
                <span asp-validation-for="vendedor.DepartamentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-dark" /><br />
                <a class="btn btn-dark" asp-action="Index" style="position: relative; top: 20px;">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}